            },
            "pluginVersion": "10.0.0",
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${datasource}"
                    },
                    "expr": "rate(node_disk_read_bytes_total[5m])",
                    "refId": "A",
                    "legendFormat": "Read - {{instance}} - {{device}}"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${datasource}"
                    },
                    "expr": "rate(node_disk_written_bytes_total[5m])",
                    "refId": "B",
                    "legendFormat": "Write - {{instance}} - {{device}}"
                }
            ],
            "title": "Disk Read/Write Rates",
            "type": "timeseries"
        },
        {
